{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ejecutar Develop con Watch",
      "type": "shell",
      "command": "node",
      "args": [
        "--watch",
        "develop.mjs",
        "--user=victor",
        "--port=3000",
        "--admin",
        "--color=true",
        "--theme-dark=false",
        "app-foo-bar"
      ],
      "options": {
        "cwd": "${workspaceFolder}" // Establece el directorio de trabajo a la raíz del proyecto
      },
      "problemMatcher": [] // Puedes agregar un problemMatcher si develop.js genera errores con un formato específico
    }
  ]
}
