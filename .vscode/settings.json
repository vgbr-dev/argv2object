{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".husky": true,
    ".github": true,
    "node_modules": true,
    /* » FILES *

    ".editorconfig": true,
    // » Eslint File Settings
    ".eslintrc{,.json,.js,.cjs,.yaml,.yml}": true,
    // "eslint.config{,.js,.mjs,.cjs,.ts,.mts,.cts}": true,
    ".eslintignore": true,
    // » Git File Settings
    ".gitattributes": true,
    ".gitconfig": true,
    ".gitignore": true,

    ".huskyrc": true,

    // » Lint-staged File Settings
    ".lintstagedrc{,.json}": true,
    "lint-staged.config{.js,.mjs,.cjs,.ts,.mts,.cts}": true,
    ".npmignore": true,
    // » Prettier File Settings
    ".prettierignore": true,
    ".prettierrc{,.toml,.cts,.cjs,.mts,.mjs,.ts,.js,.json,.yml,.yaml,.json5}": true,
    "prettier.config{,.js,.ts,.mjs,.mts,.cjs,.cts}": true,

    // » Commitlint File Settings
    ".commitlintrc{,.json,.yaml,.yml,.js,.cjs,.mjs,.ts,.cts}": true,
    "commitlint.config{.js,.cjs,.mjs,.ts,.cts}": true,
    "forge.config.js": true,

    // » Stylelint File Settings
    ".stylelintrc{,.js,.mjs,.cjs,.yml,.yaml,.json}": true,
    "LICENSE": true,
    "LICENSE.md": true,
    "jsdoc.config.json": true,
    "package-lock.json": true,
    "yarn.lock": true,
    "README.md": false,
    "vite.config.js": true
    /**/
  },
  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    ".eslintrc.json": "jsonc",
    ".prettierrc": "jsonc",
    ".stylelintrc": "json",
    ".eslintignore": "ignore",
    ".prettierignore": "ignore",
    ".gitignore": "ignore",
    ".gitkeep": "markdown",
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/bazel-out": true,
    "**/dist": true
  },
  "[markdown]": {
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.parameterHints.enabled": true,
    "editor.snippetSuggestions": "inline",
    "editor.quickSuggestions": {
      "comments": "inline",
      "strings": "inline",
      "other": "inline"
    },
  },

  // » Editor Settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "none",

  // » ESLint (optimal configuration)
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.options": {
    "overrideConfigFile": "eslint.config.mjs"
  },
  "javascript.validate.enable": false,
  "commentTranslate.targetLanguage": "en",
  "commentTranslate.multiLineMerge": true,
}
